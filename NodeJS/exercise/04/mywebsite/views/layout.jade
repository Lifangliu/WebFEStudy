doctype html
html(lang="zh_CN")
	head
		title 百度新闻管理系统
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible", content='IE=edge')
		meta(name="viewport", content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/main.css')
		script(type='text/javascript', src='/javascripts/jquery.min.js')
		script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			div.container-fluid
				div.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') 百度新闻管理系统
				div#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/admin/manager') 管理员
						li
							a(href='/admin/article') 新闻
						li
							a(href='/admin/bye')
								if login
									= '【' + login.name +'】退出'
							
		div.container-fluid
			div.row
				div.col-sm-3.col-md-2.col-xs-12
					div.panel.panel-primary
						div.panel-heading 用户管理
						div.panel-body.mu-panel-body
							a.list-group-item(href='/admin/manager') 用户列表
							a.list-group-item(href='/admin/manager/add') 新增用户
					div.panel.panel-success
						div.panel-heading 文章管理
						div.panel-body.mu-panel-body
							a.list-group-item(href='/admin/article/add') 新增文章
							a.list-group-item(href='/admin/article') 文章列表
				block content