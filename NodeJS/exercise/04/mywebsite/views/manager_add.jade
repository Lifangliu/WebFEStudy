extends ./layout
block content
	div.col-sm-6.col-md-5.col-xs-12
		h1.page-header 添加用户
		form(method='post')
			div.form-group
				label 用户名
				input.form-control(type='text', name='username', placeholder='用户名')
			div.form-group
				label 密码
				input.form-control(type='password', name='password', placeholder='密码')
			div.form-group
				label 姓名
				input.form-control(type='text', name='name', placeholder='姓名')
			button.btn.btn-default(type='button') 保存
	script(type='text/javascript', src='/javascripts/admin/manager_add.js')